{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "lib": [
      "es2015",
      "dom"
    ],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": [
    "test/",
    "dist/",
    "samples/",
    "node_modules/"
  ]
}
